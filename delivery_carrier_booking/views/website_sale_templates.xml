<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_sale_delivery_booking" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='delivery_method']" position="after">
            <div id="delivery_booking_options" class="mt-3" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        Delivery Booking
                    </div>
                    <div class="card-body">
                        <div id="delivery_date_selection" class="form-group">
                            <label for="delivery_date">Delivery Date</label>
                            <select id="delivery_date" name="delivery_date" class="form-control">
                                <!-- Dates will be populated dynamically -->
                            </select>
                        </div>
                        <div id="delivery_time_slot_selection" class="form-group mt-3" style="display: none;">
                            <label for="delivery_time_slot">Delivery Time Slot</label>
                            <select id="delivery_time_slot" name="delivery_time_slot" class="form-control">
                                <!-- Time slots will be populated dynamically -->
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
